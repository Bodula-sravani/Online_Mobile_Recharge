@model IEnumerable<MobileRecharge.Models.ContactModel>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Message)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DateOfMessage)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Reply)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Message)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DateOfMessage)
            </td>
                @if (string.IsNullOrEmpty(item.Reply))
                {
                    <td>...Waiting for reply...</td>
                }
                else
                {
                    <td>@Html.DisplayFor(modelItem => item.Reply)</td>
                }
            <td>
                <a asp-action="Edit" asp-route-id="@item.ContactId">Edit</a>
                @if(ViewData["Role"] != null && ViewData["Role"].Equals("Admin"))
                {
                       
                }
                else
                {
                    <a asp-action="Delete" asp-route-id="@item.ContactId">Delete</a>
                        
                }
               
               
            </td>
        </tr>
}
    </tbody>
</table>
